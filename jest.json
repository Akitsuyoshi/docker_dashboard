{
  "verbose": true,
  "bail": true,
  "setupFiles": ["<rootDir>/__tests__/bootstrap.js"],
  "textMatch": "<rootDir>/__tests__/**/?(*.)+(spec|test).js?(x)",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/bin/",
    "/config/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "coverageDirectory": "./coverage/",
  "collectCoverage": true,
  "rootDir": "src/"
 }